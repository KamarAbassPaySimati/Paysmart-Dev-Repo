<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/radioContainerDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey1"/>

    <LinearLayout
        android:id="@+id/customRadioContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioContainerDivider"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:layout_marginHorizontal="12dp">

        <TextView
            android:id="@+id/customRadioText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/customRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/inter_regular"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:buttonTint="@color/primaryColor"/>

    </LinearLayout>

</RelativeLayout>