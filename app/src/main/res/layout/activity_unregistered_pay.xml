<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unregisteredPayActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.payperson.UnregisteredPayActivity">

    <RelativeLayout
        android:id="@+id/unregisteredPayActivityTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/primaryColor">

        <ImageView
            android:id="@+id/unregisteredPayActivityBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/back_button_data"
            android:padding="16dp"
            android:src="@drawable/ico_arrow_back_white" />


        <TextView
            android:id="@+id/unregisteredPayActivityTopBarTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/unregisteredPayActivityBackButton"
            android:fontFamily="@font/inter_bold"
            android:includeFontPadding="false"
            android:text="@string/pay_person"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/unregisteredPayActivityConfirmButton"
        android:layout_below="@+id/unregisteredPayActivityTopBar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/inter_medium"
                android:includeFontPadding="false"
                android:text="@string/un_registered_user"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/first_name"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/unregisteredPayActivityFirstNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:background="@drawable/bg_edit_text_unfocused"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ'()"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:hint="@string/enter_first_name"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textPersonName|textCapSentences"
                android:maxLength="20"
                android:padding="12dp"
                android:singleLine="true"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textColorHint="@color/editTextHint"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/unregisteredPayActivityFirstNameWarningTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/required_field"
                android:textColor="@color/accentNegative"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/middle_name"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/unregisteredPayActivityMiddleNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:background="@drawable/bg_edit_text_unfocused"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ'()"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:hint="@string/enter_middle_name"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textPersonName|textCapSentences"
                android:maxLength="20"
                android:padding="12dp"
                android:singleLine="true"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textColorHint="@color/editTextHint"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/unregisteredPayActivityMiddleNameWarningTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/required_field"
                android:textColor="@color/accentNegative"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/last_name"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/unregisteredPayActivityLastNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:background="@drawable/bg_edit_text_unfocused"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ'()"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:hint="@string/enter_last_name"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:padding="12dp"
                android:singleLine="true"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textColorHint="@color/editTextHint"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/unregisteredPayActivityLastNameWarningTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/required_field"
                android:textColor="@color/accentNegative"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/unregistered_pay_note"
                android:textColor="@color/neutralGrey"
                android:textSize="14sp" />


        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/unregisteredPayActivityConfirmButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_common_button"
        android:fontFamily="@font/inter_medium"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>