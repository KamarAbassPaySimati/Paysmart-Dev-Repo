<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboardKycAddressActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.kyc.KycAddressActivity">

    <RelativeLayout
        android:id="@+id/onboardKycAddressActivityBackButtonBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/onboardKycAddressActivityBackButtonIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back_button"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            android:paddingBottom="16dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/onboardKycAddressActivityBackButtonTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/onboardKycAddressActivityInfoButtonIV"
            android:layout_toEndOf="@+id/onboardKycAddressActivityBackButtonIV"
            android:fontFamily="@font/inter_medium"
            android:text="@string/full_kyc"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/onboardKycAddressActivityInfoButtonIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back_button"
            android:padding="16dp"
            android:src="@drawable/ico_info_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/onboardKycAddressActivityTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onboardKycAddressActivityBackButtonBox"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/onboardKycAddressActivityHeaderTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:includeFontPadding="false"
                android:text="@string/address_details"
                android:textColor="@color/black"
                android:textSize="24sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/onboardKycAddressActivityHeaderTV"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/next_identity_details"
                android:textColor="@color/neutralGrey"
                android:textSize="14sp" />

        </RelativeLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            tools:ignore="RelativeOverlap">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/onboardKycAddressActivityPB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="99"
                android:progress="33"
                app:indicatorColor="@color/primaryColor"
                app:indicatorSize="64dp"
                app:trackColor="@color/primaryLighter"
                app:trackCornerRadius="16dp"
                app:trackThickness="6dp" />

            <TextView
                android:id="@+id/onboardKycAddressActivityProgressCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:text="@string/step1of3"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textSize="14sp" />

        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
