<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewWalletPinSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    app:backgroundTint="@color/transparent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/view_balance"
            android:textColor="@color/primaryColor"
            android:textSize="24sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/viewWalletPinSheetCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/close_button_data"
            android:src="@drawable/ic_close"
            app:tint="@color/black"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/enter_your_pin_to_view_your_wallet_balance"
        android:textColor="@color/neutralGrey"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/pin"
        android:textColor="@color/neutralGreyPrimaryText"
        android:textSize="14sp" />

    <com.poovam.pinedittextfield.SquarePinField
        android:id="@+id/viewWalletPinSheetET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-7dp"
        android:layout_marginEnd="-7dp"
        android:layout_marginBottom="-7dp"
        android:background="@color/transparent"
        android:inputType="number"
        android:textColor="@color/neutralGreyPrimaryText"
        android:textSize="24sp"
        app:cornerRadius="6dp"
        app:distanceInBetween="16dp"
        app:fieldBgColor="@color/neutralGreyTextFieldBackground"
        app:fieldColor="@color/transparent"
        app:fillerColor="@color/primaryColor"
        app:highlightColor="@color/primaryColor"
        app:isCustomBackground="true"
        app:lineThickness="0.5dp"
        app:noOfFields="6" />

    <TextView
        android:id="@+id/viewWalletPinSheetETWarningTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/required_field"
        android:textColor="@color/accentNegative"
        android:textSize="14sp"
        android:visibility="gone"
        tools:visibility="visible" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewWalletPinSheetViewButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/primary_rounded_button_background"
            android:fontFamily="@font/inter_medium"
            android:text="@string/view"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/viewWalletPinSheetViewButtonLoaderLottie"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:scaleX="2"
            android:scaleY="2"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_button_loader" />

    </FrameLayout>

</LinearLayout>