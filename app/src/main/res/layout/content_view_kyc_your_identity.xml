<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/id_document"
        android:textColor="@color/neutralGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/viewKycIdDocumentDashTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/dash"
        android:textColor="@color/neutralGreyPrimaryText"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/viewKycIdDocumentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewKycIdDocumentFrontTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_kyc_details_card"
            android:fontFamily="@font/inter_regular"
            android:padding="12dp"
            android:text="@string/front"
            android:textColor="@color/neutralGreyPrimaryText"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ico_eye_primary_text" />

        <TextView
            android:id="@+id/viewKycIdDocumentBackTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_kyc_details_card"
            android:fontFamily="@font/inter_regular"
            android:padding="12dp"
            android:text="@string/back"
            android:textColor="@color/neutralGreyPrimaryText"
            android:textSize="14sp"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ico_eye_primary_text"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/viewKycIdDocumentVisaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/visa_page"
            android:textColor="@color/neutralGreyPrimaryText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/viewKycIdDocumentRefNoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/number_of_references"
            android:textColor="@color/neutralGreyPrimaryText"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/verification_document"
        android:textColor="@color/neutralGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/viewKycVerificationDocumentDashTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/dash"
        android:textColor="@color/neutralGreyPrimaryText"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/viewKycVerificationDocumentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewKycVerificationDocumentFrontTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_kyc_details_card"
            android:fontFamily="@font/inter_regular"
            android:padding="12dp"
            android:text="@string/front"
            android:textColor="@color/neutralGreyPrimaryText"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ico_eye_primary_text" />

        <TextView
            android:id="@+id/viewKycVerificationDocumentBackTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_kyc_details_card"
            android:fontFamily="@font/inter_regular"
            android:padding="12dp"
            android:text="@string/back"
            android:textColor="@color/neutralGreyPrimaryText"
            android:textSize="14sp"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ico_eye_primary_text"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/biometrics_live_selfie"
        android:textColor="@color/neutralGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/viewKycLiveSelfieDashTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/dash"
        android:textColor="@color/neutralGreyPrimaryText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/viewKycLiveSelfieTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_kyc_details_card"
        android:fontFamily="@font/inter_regular"
        android:padding="12dp"
        android:text="@string/selfie"
        android:textColor="@color/neutralGreyPrimaryText"
        android:textSize="14sp"
        app:drawableEndCompat="@drawable/ico_eye_primary_text" />


</LinearLayout>