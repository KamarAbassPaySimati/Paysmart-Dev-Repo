<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/viewKycYourAddressNationalityContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/nationality"
            android:textColor="@color/neutralGrey"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/viewKycYourAddressNationalityTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/dash"
            android:textColor="@color/neutralGreyPrimaryText"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewKycYourAddressMalawiAddressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewKycYourAddressMalawiAddressTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/malawi_address"
            android:textColor="@color/neutralGrey"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/viewKycYourAddressMalawiAddressTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/dash"
            android:textColor="@color/neutralGreyPrimaryText"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewKycYourAddressInternationalAddressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/international_address"
            android:textColor="@color/neutralGrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/viewKycYourAddressInternationalAddressTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/dash"
            android:textColor="@color/neutralGreyPrimaryText"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>