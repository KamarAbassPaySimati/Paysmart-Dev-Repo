<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboardKycPersonalActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.kyc.KycPersonalActivity">

    <RelativeLayout
        android:id="@+id/onboardKycPersonalActivityBackButtonBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/onboardKycPersonalActivityBackButtonIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back_button"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            android:paddingBottom="16dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/onboardKycPersonalActivityBackButtonTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/onboardKycPersonalActivityInfoButtonIV"
            android:layout_toEndOf="@+id/onboardKycPersonalActivityBackButtonIV"
            android:fontFamily="@font/inter_medium"
            android:text="@string/full_kyc"
            android:textColor="@color/neutralGreyPrimaryText"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/onboardKycPersonalActivityInfoButtonIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back_button"
            android:padding="16dp"
            android:src="@drawable/ico_info_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/onboardKycPersonalActivityTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onboardKycPersonalActivityBackButtonBox"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/onboardKycPersonalActivityHeaderTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:includeFontPadding="false"
                android:text="@string/your_info"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textSize="24sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/onboardKycPersonalActivityHeaderTV"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/last_step"
                android:textColor="@color/neutralGrey"
                android:textSize="14sp" />

        </RelativeLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            tools:ignore="RelativeOverlap">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/onboardKycPersonalActivityPB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="99"
                android:progress="99"
                app:indicatorColor="@color/primaryColor"
                app:indicatorSize="64dp"
                app:trackColor="@color/primaryLighter"
                app:trackCornerRadius="16dp"
                app:trackThickness="6dp" />

            <TextView
                android:id="@+id/onboardKycPersonalActivityProgressCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:text="@string/step3of3"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textSize="14sp" />

        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/onboardKycPersonalActivityTopBar">

        <RelativeLayout
            android:id="@+id/onboardKycPersonalActivityContentBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            tools:visibility="visible">

            <ScrollView
                android:id="@+id/onboardKycPersonalActivitySV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/onboardKycPersonalActivityBottomBar"
                android:layout_alignParentTop="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/gender"
                        android:textColor="@color/neutralGreyPrimaryText"
                        android:textSize="14sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:scrollbars="none">

                        <RadioGroup
                            android:id="@+id/onboardKycPersonalActivityGenderRG"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/onboardKycPersonalActivityGenderMaleRB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="@string/male"
                                android:textColor="@color/neutralGreyPrimaryText"
                                android:textSize="16sp"
                                app:buttonTint="@color/primaryColor" />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/onboardKycPersonalActivityGenderFemaleRB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="@string/female"
                                android:textColor="@color/neutralGreyPrimaryText"
                                android:textSize="16sp"
                                app:buttonTint="@color/primaryColor" />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/onboardKycPersonalActivityGenderUndisclosedRB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="@string/undisclosed"
                                android:textColor="@color/neutralGreyPrimaryText"
                                android:textSize="16sp"
                                app:buttonTint="@color/primaryColor" />


                        </RadioGroup>

                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/onboardKycPersonalActivityGenderWarningTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/required_field"
                        android:textColor="@color/accentNegative"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:visibility="visible" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/neutralGreyPrimaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/onboardKycPersonalActivityDOBTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_edit_text_unfocused"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:hint="@string/dd_mmm_yyyy"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textColor="@color/neutralGreyPrimaryText"
                        android:textColorHint="@color/editTextHint"
                        android:textSize="14sp"
                        app:drawableEndCompat="@drawable/ico_calendar" />

                    <TextView
                        android:id="@+id/onboardKycPersonalActivityDOBWarningTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/required_field"
                        android:textColor="@color/accentNegative"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:visibility="visible" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/occupation_source_of_funds"
                        android:textColor="@color/neutralGreyPrimaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/onboardKycPersonalActivityOccupationTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_edit_text_unfocused"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:hint="@string/select_occupation_source_of_funds"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textColor="@color/neutralGreyPrimaryText"
                        android:textColorHint="@color/editTextHint"
                        android:textSize="14sp"
                        app:drawableEndCompat="@drawable/ico_expand_black" />

                    <TextView
                        android:id="@+id/onboardKycPersonalActivityOccupationWarningTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/required_field"
                        android:textColor="@color/accentNegative"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:visibility="visible" />


                    <LinearLayout
                        android:id="@+id/onboardKycPersonalActivityEmployerDetailsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/kyc_employed_note"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/employer_name"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/onboardKycPersonalActivityEmployerNameET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:autofillHints=""
                            android:background="@drawable/bg_edit_text_unfocused"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789()., "
                            android:ellipsize="end"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/enter_full_name_of_the_employer"
                            android:importantForAutofill="no"
                            android:inputType="textNoSuggestions"
                            android:maxLength="100"
                            android:padding="12dp"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textColorHint="@color/editTextHint"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityEmployerNameWarningTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/required_field"
                            android:textColor="@color/accentNegative"
                            android:textSize="14sp"
                            android:visibility="gone"
                            tools:visibility="visible" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/industry_sector"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityIndustrySectorTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_edit_text_unfocused"
                            android:ellipsize="end"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/select_industry_sector"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textColorHint="@color/editTextHint"
                            android:textSize="14sp"
                            app:drawableEndCompat="@drawable/ico_expand_black" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityIndustrySectorWarningTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/required_field"
                            android:textColor="@color/accentNegative"
                            android:textSize="14sp"
                            android:visibility="gone"
                            tools:visibility="visible" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/town_district"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textSize="14sp" />

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/onboardKycPersonalActivityTownDistrictET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:autofillHints=""
                            android:background="@drawable/bg_edit_text_unfocused"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789,. "
                            android:ellipsize="end"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/enter_town_district"
                            android:importantForAutofill="no"
                            android:inputType="textNoSuggestions"
                            android:maxLength="100"
                            android:padding="12dp"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textColorHint="@color/editTextHint"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityTownDistrictWarningTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/required_field"
                            android:textColor="@color/accentNegative"
                            android:textSize="14sp"
                            android:visibility="gone"
                            tools:visibility="visible" />


                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/business_relationships_note"
                        android:textColor="@color/neutralGreyPrimaryText"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <CheckBox
                            android:id="@+id/onboardKycPersonalActivityBusinessRelationShip1CB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:checked="false"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            app:buttonIconTint="@color/white"
                            app:buttonTint="@color/primaryColor" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityBusinessRelationShip1TV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@+id/onboardKycPersonalActivityBusinessRelationShip1CB"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/business_relationship1"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textColorLink="@color/accentInformation"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <CheckBox
                            android:id="@+id/onboardKycPersonalActivityBusinessRelationShip2CB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:checked="false"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            app:buttonIconTint="@color/white"
                            app:buttonTint="@color/primaryColor" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityBusinessRelationShip2TV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@+id/onboardKycPersonalActivityBusinessRelationShip2CB"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/business_relationship2"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textColorLink="@color/accentInformation"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <CheckBox
                            android:id="@+id/onboardKycPersonalActivityBusinessRelationShip3CB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:checked="false"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            app:buttonIconTint="@color/white"
                            app:buttonTint="@color/primaryColor" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityBusinessRelationShip3TV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@+id/onboardKycPersonalActivityBusinessRelationShip3CB"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/business_relationship3"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textColorLink="@color/accentInformation"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <CheckBox
                            android:id="@+id/onboardKycPersonalActivityBusinessRelationShip4CB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:checked="false"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            app:buttonIconTint="@color/white"
                            app:buttonTint="@color/primaryColor" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityBusinessRelationShip4TV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@+id/onboardKycPersonalActivityBusinessRelationShip4CB"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/business_relationship4"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textColorLink="@color/accentInformation"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/onboardKycPersonalActivityBusinessRelationshipWarningTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/required_field"
                        android:textColor="@color/accentNegative"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:visibility="visible" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/income_status"
                        android:textColor="@color/neutralGreyPrimaryText"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/monthly_income"
                        android:textColor="@color/neutralGreyPrimaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/onboardKycPersonalActivityMonthlyIncomeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_edit_text_unfocused"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:hint="@string/select_monthly_income"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textColor="@color/neutralGreyPrimaryText"
                        android:textColorHint="@color/editTextHint"
                        android:textSize="14sp"
                        app:drawableEndCompat="@drawable/ico_expand_black" />

                    <TextView
                        android:id="@+id/onboardKycPersonalActivityMonthlyIncomeWarningTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/required_field"
                        android:textColor="@color/accentNegative"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/monthly_withdrawal"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityMonthlyWithdrawalTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_edit_text_unfocused"
                            android:ellipsize="end"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/select_monthly_withdrawal"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textColorHint="@color/editTextHint"
                            android:textSize="14sp"
                            app:drawableEndCompat="@drawable/ico_expand_black" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityMonthlyWithdrawalWarningTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/required_field"
                            android:textColor="@color/accentNegative"
                            android:textSize="14sp"
                            android:visibility="gone"
                            tools:visibility="visible" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/onboardKycPersonalActivityBankDetailsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/banking_information_for_payout_optional"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/bank_name"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityBankNameTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_edit_text_unfocused"
                            android:ellipsize="end"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/select_bank_name"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textColorHint="@color/editTextHint"
                            android:textSize="14sp"
                            app:drawableEndCompat="@drawable/ico_expand_black" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityBankNameWarningTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/required_field"
                            android:textColor="@color/accentNegative"
                            android:textSize="14sp"
                            android:visibility="gone"
                            tools:visibility="visible" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/account_number"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/onboardKycPersonalActivityAccountNumberET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:autofillHints=""
                            android:background="@drawable/bg_edit_text_unfocused"
                            android:digits="0123456789"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/enter_account_number"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:maxLength="25"
                            android:padding="12dp"
                            android:textColor="@color/neutralGreyPrimaryText"
                            android:textColorHint="@color/editTextHint"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/onboardKycPersonalActivityAccountNumberWarningTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/required_field"
                            android:textColor="@color/accentNegative"
                            android:textSize="14sp"
                            android:visibility="gone"
                            tools:visibility="visible" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:text="@string/account_name"
                                android:textColor="@color/neutralGreyPrimaryText"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/onboardKycPersonalActivityAccountNameET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:autofillHints=""
                                android:background="@drawable/bg_edit_text_unfocused"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ,. "
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center_vertical"
                                android:hint="@string/enter_account_name"
                                android:importantForAutofill="no"
                                android:inputType="textNoSuggestions"
                                android:maxLength="100"
                                android:padding="12dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/neutralGreyPrimaryText"
                                android:textColorHint="@color/editTextHint"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/onboardKycPersonalActivityAccountNameWarningTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/inter_medium"
                                android:text="@string/required_field"
                                android:textColor="@color/accentNegative"
                                android:textSize="14sp"
                                android:visibility="gone"
                                tools:visibility="visible" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <RelativeLayout
                android:id="@+id/onboardKycPersonalActivityBottomBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/onboardKycPersonalActivitySkipButton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/primary_outlined_button_background"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/skip"
                    android:textAllCaps="false"
                    android:textColor="@color/primaryColor"
                    android:textSize="18sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/onboardKycPersonalActivitySkipButton"
                    android:paddingStart="4dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/onboardKycPersonalActivitySaveAndContinueButton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/primary_rounded_button_background"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/save_and_continue"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/onboardKycPersonalActivitySaveAndContinueButtonLoaderLottie"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:scaleX="2"
                        android:scaleY="2"
                        android:visibility="gone"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/lottie_button_loader" />


                </FrameLayout>

            </RelativeLayout>

        </RelativeLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/onboardKycPersonalActivityLoaderLottie"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_loader" />

    </FrameLayout>

</RelativeLayout>