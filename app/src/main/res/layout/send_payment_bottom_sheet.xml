<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payOutSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    app:backgroundTint="@color/transparent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/send_payment"
            android:textColor="@color/primaryColor"
            android:textSize="24sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/sendPaymentClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/close_button_data"
            android:src="@drawable/ic_close"
            app:tint="@color/black"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/sendPaymentSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/send_payment_subtext"
        android:textColor="@color/neutralGrey"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:id="@+id/sendPaymentPinContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/pin"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textSize="14sp" />

            <com.poovam.pinedittextfield.SquarePinField
                android:id="@+id/sendPaymentPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-7dp"
                android:layout_marginEnd="-7dp"
                android:layout_marginBottom="-7dp"
                android:background="@color/transparent"
                android:inputType="number"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textSize="24sp"
                app:cornerRadius="6dp"
                app:distanceInBetween="16dp"
                app:fieldBgColor="@color/neutralGreyTextFieldBackground"
                app:fieldColor="@color/transparent"
                app:fillerColor="@color/primaryColor"
                app:highlightColor="@color/primaryColor"
                app:isCustomBackground="true"
                app:lineThickness="0.5dp"
                app:noOfFields="6" />


            <TextView
                android:id="@+id/sendPaymentPinETWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/required_field"
                android:textColor="@color/accentNegative"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sendPaymentPasswordContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/password"
                android:textColor="@color/neutralGreyPrimaryText"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/sendPaymentPasswordBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit_text_unfocused">

                <EditText
                    android:id="@+id/sendPaymentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/sendPaymentPasswordToggle"
                    android:autofillHints=""
                    android:background="@color/transparent"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789[#\$%;*+&lt;=&gt;@\\^_`|~(){}\/,:;\-\[\]]'&amp;"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_regular"
                    android:hint="@string/enter_password"
                    android:inputType="textPassword"
                    android:maxLength="25"
                    android:padding="12dp"
                    android:textColor="@color/neutralGreyPrimaryText"
                    android:textColorHint="@color/editTextHint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sendPaymentPasswordToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/inter_bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/show"
                    android:textColor="@color/hideShowPasswordGreen"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/sendPaymentPasswordETWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/required_field"
                android:textColor="@color/accentNegative"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendPaymentConfirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/primary_rounded_button_background"
            android:fontFamily="@font/inter_medium"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sendPaymentConfirmLoaderLottie"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:scaleX="2"
            android:scaleY="2"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_button_loader" />

    </FrameLayout>

</LinearLayout>